<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/llAdvertising"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:orientation="vertical">

                <fragment
                    android:id="@+id/viewpager"
                    android:name="com.doing.flat.coffee.ui.viewpagercycle.lib.CycleViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000000" />
            </FrameLayout>


            <FrameLayout
                android:id="@+id/ccccc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/task"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000000" />

                <ProgressBar
                    android:id="@+id/pb"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="top|center_horizontal"
                    android:indeterminateDrawable="@drawable/pro_style_xml_icon"
                    android:indeterminateDuration="1000" />

                <VideoView
                    android:id="@+id/video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></VideoView>
            </FrameLayout>
        </LinearLayout>

        <!--android:layout_width="530px"-->
        <LinearLayout
            android:id="@+id/ll_image_code"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <!--android:paddingBottom="3dp"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:paddingRight="10dp"-->
                <!--android:paddingTop="3dp"-->
                <!--android:layout_width="420px"-->
                <LinearLayout
                    android:id="@+id/fl_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|bottom"
                    android:background="@android:color/transparent"
                    android:gravity="center|bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textGoodsEerror"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/coloryellow"
                        android:textSize="18px"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/textHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/network_error"
                        android:textColor="@color/coloryellow"
                        android:textSize="18px" />

                    <TextView
                        android:id="@+id/text_bug"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="错误代码：123"
                        android:textColor="@color/coloryellow"
                        android:textSize="18px"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/barcode_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_add_toast"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/image_code"
                        android:layout_width="233px"
                        android:layout_height="233px"
                        android:scaleType="fitXY"
                        android:src="@mipmap/erweima"
                        android:visibility="visible" />


                </LinearLayout>


                <!--<TextView-->
                <!--android:id="@+id/text_bug"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:text="错误代码：123"-->
                <!--android:textColor="@color/coloryellow"-->
                <!--android:textSize="23px"-->
                <!--android:visibility="gone" />-->


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!--<TextView-->
                <!--android:id="@+id/textHint"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:text="@string/network_error"-->
                <!--android:textColor="@color/coloryellow"-->
                <!--android:textSize="23px" />-->


                <TextView
                    android:id="@+id/textShow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45px"
                    android:gravity="center"
                    android:text="@string/service_telephone"
                    android:textColor="@color/coloryellow"
                    android:textSize="23px"
                    android:visibility="gone" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/llClass"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10px"
                    android:layout_marginLeft="4px"
                    android:layout_marginRight="4px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_add_ok"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/good_image_1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5px"
                            android:layout_marginTop="5px"
                            android:text="@string/hot_coffee"
                            android:textColor="@color/colorW"
                            android:textSize="15px" />

                        <TextView
                            android:id="@+id/textGood1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5px"
                            android:text=""
                            android:textColor="@color/colorW"
                            android:textSize="15px" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10px"
                    android:layout_marginLeft="4px"
                    android:layout_marginRight="4px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_add_ok"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/good_image_2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5px"
                            android:layout_marginTop="5px"
                            android:text="@string/hot_tea_milk"
                            android:textColor="@color/colorW"
                            android:textSize="15px" />

                        <TextView
                            android:id="@+id/textGood2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/colorW"
                            android:textSize="15px" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10px"
                    android:layout_marginLeft="4px"
                    android:layout_marginRight="4px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_add_ok"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/good_image_3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5px"
                            android:layout_marginTop="5px"
                            android:gravity="left"
                            android:text="@string/ice_water"
                            android:textColor="@color/colorW"
                            android:textSize="15px" />

                        <TextView
                            android:id="@+id/textGood3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/colorW"
                            android:textSize="15px" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10px"
                    android:layout_marginLeft="4px"
                    android:layout_marginRight="4px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_add_ok"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/good_image_4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5px"
                            android:layout_marginTop="5px"
                            android:gravity="center"
                            android:text="@string/hot_water"
                            android:textColor="@color/colorW"
                            android:textSize="15px" />

                        <TextView
                            android:id="@+id/textGood4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/colorW"
                            android:textSize="15px"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/image_publicity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image_hint"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:lineSpacingExtra="5dp"
            android:text="福能达空气水饮水机"
            android:textColor="@color/colorW"
            android:textSize="23px"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/logo_futai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="富泰集团"
                    android:textColor="@color/colorW"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/textNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/logo_futai"
                    android:gravity="center_vertical"
                    android:text="机器编号：S12809"
                    android:textColor="@color/colorW"
                    android:textSize="25sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/wifi_image"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_3g"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="3G"
                    android:textColor="@color/colorW"
                    android:textSize="23px"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/colorW"
                    android:textSize="23px" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>